<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">       
    <title>login</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/signin.css" />
  </head>
  <body>

    <section id="log_main">
      <header class="header">
        <h1>MyTodos</h1>
      </header>
      <div class="form-container">
        <form class="form-signin" role="form" method="post">
          <input id="txtUserName" name="txtUserName" type="text" class="form-control" placeholder="用户名" required autofocus />
          <input id="txtUserPwd" name="txtUserPwd" type="password" class="form-control" placeholder="密码" required/>
          <button id="btnSub" type="submit">登录</button>
          <input name="chbRem" id="chbRem" class="checkbox" type="checkbox" value="remember-me"><label>记住密码</label>
          <a class="reg" href="/reg" role="button">去注册</a>
        </form>
        <section id="ale_msg">
          <% if (locals.success) { %>
          <div id="alt_sucess" class="alert alert-success">
            <%- success %>
          </div>
          <% } %>
          <% if (locals.error) { %>
          <div id="alt_warning" class="alert alert-warning">
            <%= error %>
          </div>
          <% } %>
        </section>
      </div>

    </section>

  </body>
  <script src="/javascripts/nej/src/define.js?pro=./"></script>
  <script src="/javascripts/util.js" type="text/javascript"></script>
  <script src="/javascripts/login.js" type="text/javascript"></script>
</html>




